<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.VBox?>
<VBox alignment="CENTER" spacing="10" xmlns:fx="http://javafx.com/fxml" fx:controller="com.example.sistema_votacion_escolar.Controllers.VotingController">
    <children>
        <TableView fx:id="candidatesTable">
            <columns>
                <TableColumn fx:id="idColumn" text="ID"/>
                <TableColumn fx:id="nameColumn" text="Nombre"/>
                <TableColumn fx:id="campaignDetailsColumn" text="Detalles"/>
            </columns>
        </TableView>
        <Button fx:id="voteButton" text="Registrar Voto" onAction="#handleVoteButtonAction"/>
        <Label fx:id="messageLabel"/>
        <Button text="Volver" onAction="#handleReturnToMain"/>
    </children>
</VBox>
